---
var displayName = name
var displayEmail = email
---
<div class="user-card">
    <h3>{displayName}</h3>
    <p>{displayEmail}</p>
    <slot />
</div>

<style scoped>
.user-card {
    border: 1px solid #e5e7eb;
    padding: 1rem;
    border-radius: 0.5rem;
    margin: 1rem 0;
}

.user-card h3 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
}

.user-card p {
    margin: 0;
    color: #6b7280;
}
</style>
